<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="photos.view.SearchController">
   <children>
      <ScrollPane layoutX="28.0" layoutY="140.0" prefHeight="470.0" prefWidth="557.0">
        <content>
          <AnchorPane minHeight="0.0" minWidth="0.0">
               <children>
                  <FlowPane fx:id="previews" prefHeight="470.0" prefWidth="557.0" />
               </children></AnchorPane>
        </content>
      </ScrollPane>
      <Label layoutX="14.0" layoutY="9.0" text="Search by:" />
      <RadioButton fx:id="dateButton" layoutX="17.0" layoutY="39.0" mnemonicParsing="false" onAction="#displayDateSearch" selected="true" text="Date">
         <toggleGroup>
            <ToggleGroup fx:id="searchParamGroup" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="oneTagButton" layoutX="17.0" layoutY="65.0" mnemonicParsing="false" onAction="#displayOneTagSearch" prefHeight="27.0" prefWidth="148.0" text="One Tag" toggleGroup="$searchParamGroup" />
      <Button fx:id="createNewAlbumButton" layoutX="17.0" layoutY="639.0" mnemonicParsing="false" text="Create New Album" />
      <Button fx:id="cancelButton" layoutX="521.0" layoutY="639.0" mnemonicParsing="false" onAction="#goBack" text="Cancel" />
      <Button fx:id="searchButton" layoutX="495.0" layoutY="56.0" mnemonicParsing="false" onAction="#search" prefHeight="30.0" prefWidth="78.0" text="Search" />
      <TextField fx:id="field1" layoutX="289.0" layoutY="24.0" onMouseClicked="#setFieldEmpty" text="Date (MM/DD/YYYY)">
         <font>
            <Font name="System Italic" size="14.0" />
         </font>
      </TextField>
      <TextField fx:id="field2" layoutX="289.0" layoutY="88.0" onMouseClicked="#setFieldEmpty" text="Date (MM/DD/YYYY)">
         <font>
            <Font name="System Italic" size="14.0" />
         </font>
      </TextField>
      <RadioButton fx:id="twoTagButton" layoutX="17.0" layoutY="98.0" mnemonicParsing="false" onAction="#displayTwoTagSearch" prefHeight="27.0" prefWidth="126.0" text="Two Tags" toggleGroup="$searchParamGroup" />
      <Label fx:id="label1" layoutX="216.0" layoutY="31.0" text="Start Date:" />
      <Label fx:id="label2" layoutX="221.0" layoutY="95.0" text="End Date:" />
      <RadioButton fx:id="andButton" layoutX="316.0" layoutY="57.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="56.0" selected="true" text="AND" visible="false">
         <toggleGroup>
            <ToggleGroup fx:id="booleanGroup" />
         </toggleGroup></RadioButton>
      <RadioButton fx:id="orButton" layoutX="383.0" layoutY="57.0" mnemonicParsing="false" prefHeight="27.0" prefWidth="51.0" text="OR" toggleGroup="$booleanGroup" visible="false" />
      <MenuButton fx:id="tag1Button" layoutX="171.0" layoutY="27.0" maxWidth="100.0" mnemonicParsing="false" prefWidth="100.0" text="Tag1" visible="false" />
      <MenuButton fx:id="tag2Button" layoutX="171.0" layoutY="91.0" maxWidth="100.0" mnemonicParsing="false" prefWidth="100.0" text="Tag2" visible="false" />
   </children>
</AnchorPane>
